import java.util.Scanner;

class main {
  public static void main(String[] args) {
    
  	double dolar;
    double reais;
    double conta;
    Scanner resposta = new Scanner(System.in);
    
    
    System.out.println("Qual o valor em dolar você tem em sua conta: ");
    dolar = resposta.nextDouble();
    
    reais = 4.95;
    conta = dolar * reais;
   
    System.out.println("O valor em reais é igual a: " + conta);
    
    
    
    
    
  }
}
